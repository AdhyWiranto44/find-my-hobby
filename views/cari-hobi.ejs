<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">

    <!-- Styles -->
    <style>
        a.nav-link::after {
            border-bottom: 4px solid #212529;
        }

        .btn-danger {
            box-shadow: 0 var(--secondary-shadow);
        }

        .btn-danger:hover {
            box-shadow: 0 var(--secondary-shadow);
        }

        #hobbies .card-img {
            filter: brightness(75%);
        }
    </style>

    <title>Find My Hobby</title>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-warning fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/"><img src="/img/logo.webp" width="35" alt="Find My Hobby" /></a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <!-- <span class="navbar-toggler-icon"></span> -->
                <div class="nav-menu" onclick="openNavMenu(this)">
                    <div class="bar1"></div>
                    <div class="bar2"></div>
                    <div class="bar3"></div>
                </div>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                    <div class="navbar-nav d-flex align-items-center justify-content-between">
                        <form action="/search" method="GET" class="d-flex bg-white p-1" style="border-radius: 15px;">
                            <input type="text" class="form-control border-0" id="title" name="title" placeholder="contoh: Menulis" />
                            <button class="btn btn-danger border-0" style="border-radius: 10px;">Cari</button>
                        </form>
                        <a class="nav-link fw-bold ms-3" href="/carikan-saya-hobi">CARIKAN SAYA HOBI</a>
                    </div>
                </div>
        </div>
    </nav>

    <div id="hobbies" class="container" style="margin-top: 130px;">
        <div class="row mt-4">
            <div class="col-12">
                <% if (kind === "kategori") { %>
                    <h5><b>Kategori:</b> <%= category.name %> </h5>
                <% } else if (kind === "mencari") { %>
                    <h5><b>Mencari:</b> <%= search %> </h5>
                <% } %>
            </div>
        </div>
        <div class="row mt-3">
            <% if (hobbies.length > 0) { %>
                <% hobbies.forEach(hobby => { %>
                    <div class="col-12 col-md-4 col-lg-3">
                        <a href="/hobby/<%= hobby.category[0].slug %>/<%= hobby.slug %> ">
                            <div class="card bg-dark text-white border-0 shadow overflow-hidden mb-4">
                                <img src="/img/hobi.webp" class="card-img w-100" alt="<%= hobby.name %>" />
                                <div class="card-img-overlay d-flex">
                                    <div class="mt-auto">
                                        <h5 class="card-title fw-bold"><%= hobby.name %></h5>
                                        <p class="card-text text-justify"><%= hobby.description.substring(0,50) %> ...</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Maaf, yang anda cari tidak ada</p>
            <% } %>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js" integrity="sha384-lpyLfhYuitXl2zRZ5Bn2fqnhNAKOAaM/0Kr9laMspuaMiZfGmfwRNFh8HlMy49eQ" crossorigin="anonymous"></script>
    -->
    </body>
</html>